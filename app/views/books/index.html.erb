<p id="notice"></p>
<h1>Books</h1>

<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <tr>
      <td>リーダブルコード</td>
      <td>より良いコードを書くためのシンプルで実践的なテクニック</td>
      <td>Show</td>
      <td>Edit</td>
      <td>Destroy</td>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: Book.new do |f| %>
 <div class="field">
   <label for="book_title">Title</label>
   <%= f.text_field :title %>
 </div>
 <div class="field">
   <label for="book_body">Body</label>
   <%= f.text_area :body %>
 </div>
 <div class="actions">
   <%= f.submit 'Create Book' %>
 </div>





<% end %>



