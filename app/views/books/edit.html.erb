<h1>Editing Book</h1>

<% if @book.errors.any? %>
 <div id="error-explanation">
    <h2>
        <% if @book.errors.count == 1%>
         1 error prohibited this book from being saved:
        <% else %>
         2 errors prohibited this book from being saved:
        <% end %>
    </h2>
    <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
 </div>
<% end %>


<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title%>
  </div>
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%=f.submit 'Update Book' %>
  </div>

<% end %>


<%= link_to "Show", book_path(@book), method: :get %>
